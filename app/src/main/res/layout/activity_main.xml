<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D7D83"
    android:padding="12dp"
    tools:context="com.sharebook.felipe.sharebookapp.activity.LoginActivity">

    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_button"
        android:layout_width="379dp"
        android:layout_height="20dp"


        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btn_login"
        android:layout_marginTop="13dp"
        android:editable="true"
        android:elevation="0dp"
        android:hapticFeedbackEnabled="true"
        android:text="Login with FB"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="3dp"
        tools:layout_editor_absoluteY="434dp" />

    <EditText
        android:id="@+id/txt_user"
        android:layout_width="376dp"
        android:layout_height="47dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="13dp"
        android:ems="10"
        android:hint="Username"
        android:inputType="textPersonName"
        android:textColor="@android:color/white"
        android:textColorHighlight="#83E85B"
        android:textColorHint="@android:color/white"
        android:textColorLink="#83E85B"
        tools:layout_editor_absoluteX="4dp"
        tools:layout_editor_absoluteY="246dp" />

    <EditText
        android:id="@+id/txt_password"
        android:layout_width="376dp"
        android:layout_height="47dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txt_user"
        android:layout_marginTop="11dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="@android:color/background_light"
        android:textColorHint="@android:color/white"
        android:textColorLink="#83E85B"
        tools:layout_editor_absoluteX="4dp"
        tools:layout_editor_absoluteY="312dp"
        tools:textColor="#3B5441" />

    <Button
        android:id="@+id/btn_login"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="382dp"
        android:layout_height="49dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txt_password"
        android:layout_marginTop="13dp"
        android:backgroundTint="#68C16F"
        android:elevation="20dp"
        android:onClick="onLoginClicked"
        android:text="Login"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="368dp" />

    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="373dp"
        android:layout_height="225dp"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="false"
        android:scaleType="centerInside"
        android:src="@drawable/header"
        tools:layout_editor_absoluteX="4dp"
        tools:layout_editor_absoluteY="12dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="371dp"
        android:layout_height="26dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/img_logo"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="Comparte un libro, comparte cultura"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="normal|italic"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="536dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="380dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:backgroundTint="#83E85B"
        android:elevation="0dp"
        android:onClick="registrar"
        android:text="Quiero Registrarme"
        android:textColor="#3B5441"
        android:textSize="16sp"
        android:textStyle="italic"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="486dp" />

</android.widget.RelativeLayout>
