<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_red_dark"
    android:padding="15dp"
    >


    <TextView
        android:id="@+id/publibro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Publicar Libro"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/cardview_light_background"
        android:textStyle="normal|bold"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="32dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre:"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/cardview_light_background"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="32dp"
        android:layout_below="@+id/publibro"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
            android:id="@+id/nombre"
            android:layout_width="338dp"
            android:layout_height="30dp"

        android:ems="10"
            android:gravity="right"
            android:inputType="textPersonName"
            android:textColor="@color/cardview_light_background"
            android:textColorHighlight="@color/cardview_light_background"
            android:textColorHint="@color/cardview_light_background"
            android:textColorLink="@color/cardview_light_background"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="55dp"
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />




        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Autor:"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/cardview_light_background"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="139dp"
            android:layout_above="@+id/autor"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="13dp" />

        <EditText
            android:id="@+id/autor"
            android:layout_width="336dp"
            android:layout_height="35dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="@color/cardview_light_background"
            android:textColorLink="@color/cardview_light_background"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="154dp"
            android:layout_above="@+id/textView4"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="10dp"
            android:layout_alignRight="@+id/spinner"
            android:layout_alignEnd="@+id/spinner" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Imagen:"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/cardview_light_background"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="187dp"
            android:layout_above="@+id/buttonImagen"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


        <Button
            android:id="@+id/buttonImagen"
            android:layout_width="338dp"
            android:layout_height="48dp"
            android:background="@android:color/background_light"
            android:onClick="agregarFoto"
            android:text="Add Photo"
            android:textColor="@android:color/holo_red_dark"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="205dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="338dp"

        android:layout_height="189dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/buttonImagen"
        android:gravity="center"
        app:srcCompat="@drawable/addlibro"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="259dp" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="63dp"
            android:layout_height="66dp"
            android:layout_gravity="bottom|end"
            android:layout_weight="0.44"
            android:src="@drawable/agregar"
            tools:layout_editor_absoluteY="463dp"
            tools:layout_editor_absoluteX="161dp"
            android:layout_below="@+id/imageView"
            android:layout_centerHorizontal="true" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="339dp"
            android:layout_height="32dp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="104dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/textView6"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Editorial:"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/cardview_light_background"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="89dp"
            android:layout_below="@+id/nombre"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="11dp" />



</RelativeLayout>
