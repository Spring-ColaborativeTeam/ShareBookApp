<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#0D7D83"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imagenLibro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"

        android:layout_weight="0.32"
        android:contentDescription="@string/app_name"
        android:scaleType="center"
        android:src="@drawable/book" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imagenLibro"
        android:layout_centerVertical="true"
        android:text="Nombre: "
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/nombreVentana"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        android:layout_below="@+id/textView9"
        android:gravity="center"
        android:text=""
        android:textColor="@android:color/white"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/nombreVentana"
        android:text="Editorial:"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/ediVentana"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/textView10"
        android:gravity="center"
        android:text=""
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ediVentana"
        android:text="Autor: "
        android:textColor="@android:color/white"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/autorVentana"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView11"
        android:gravity="center"
        android:text=""
        android:textColor="@android:color/white"
        android:textSize="20sp" />


    <Button
        android:id="@+id/button5"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/autorVentana"
        android:backgroundTint="#68C170"
        android:onClick="intercambiarLibro"
        android:text="Intercambiar"
        android:textColor="@android:color/white"
        android:textSize="17sp" />


</RelativeLayout>