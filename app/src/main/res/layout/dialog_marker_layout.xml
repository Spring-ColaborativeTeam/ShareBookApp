<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
>

    <ImageView
        android:id="@+id/imagenLibro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/app_name"
        android:scaleType="center"
        android:src="@drawable/book"

        android:layout_weight="0.32"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textSize="20sp"
        android:text="Nombre: "
        android:textColor="#d80027"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imagenLibro"/>

    <TextView
        android:id="@+id/nombreVentana"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textSize="20sp"
        android:gravity="right"
        android:layout_below="@+id/textView9"

        android:text=""
        android:textColor="#d80027" />


    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textSize="20sp"
        android:text="Editorial:"
        android:textColor="#d80027"
        android:layout_below="@+id/nombreVentana"
     />

    <TextView
        android:id="@+id/ediVentana"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textSize="20sp"
        android:gravity="right"
        android:layout_below="@+id/textView10"
        android:text=""
        android:textColor="#d80027"
        />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textSize="20sp"
        android:text="Autor: "
        android:textColor="#d80027"
        android:layout_below="@+id/ediVentana"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <TextView
        android:id="@+id/autorVentana"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textSize="20sp"
        android:gravity="right"
        android:layout_below="@+id/textView11"
        android:text=""
        android:textColor="#d80027"/>



    <Button
        android:id="@+id/button5"
        style="@style/Widget.AppCompat.Button"
        android:backgroundTint="@android:color/background_light"
        android:textSize="17sp"
        android:textColor="@android:color/holo_red_dark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Intercambiar"
        android:layout_below="@+id/autorVentana"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />



</RelativeLayout>