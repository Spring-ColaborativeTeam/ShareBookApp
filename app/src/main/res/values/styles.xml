<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="ActionBarThemeOverlay" parent="">

        <item name="colorControlNormal">#0D7D83</item>
        <item name="colorControlHighlight">#0D7D83</item>
    </style>


    <style name="ThemeToolbar" parent="Theme.AppCompat.Light">

        <!-- navigation icon color -->
        <item name="colorControlNormal">#0D7D83</item>

        <item name="colorPrimaryDark">#0D7D83</item>
        <!-- color of the menu overflow icon -->
        <item name="android:textColorSecondary">#0D7D83</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
